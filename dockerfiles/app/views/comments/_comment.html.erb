<div class="row">
  <div class="col m8">
        <div class="card">
            <div class="card-content black-text">
              <span class="card-title black-text"><%= comment.name %></span>
              <br><p><%= comment.body %></p>
              <br><p><%= time_ago_in_words(comment.created_at) %> ago</p>
               <% if user_signed_in? %>
              <br><p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button", data: { confirm: "Are you sure?" } %></p>
               <% end %>
            </div>
          </div>
        </div>
      </div>
